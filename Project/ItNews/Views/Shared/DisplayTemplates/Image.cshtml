@model string
@{
    object htmlAttributes = null;
    var name = ViewData.ModelMetadata.DisplayName ?? ViewData.ModelMetadata.PropertyName;
    if (ViewData.ContainsKey("htmlAttributes"))
    {
        htmlAttributes = ViewData["htmlAttributes"];
    }
}
<img src="@Url.Content(Model)" alt="@name" @Html.HtmlAttributes(htmlAttributes) /> 